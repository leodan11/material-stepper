<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.github.leodan11.stepper.StepperLayout
        android:id="@+id/nav_host_fragment_content_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:ms_activeStepColor="?attr/colorPrimary"
        app:ms_backButtonColor="?attr/colorPrimary"
        app:ms_bottomNavigationBackground="?attr/colorSurfaceContainer"
        app:ms_completeButtonColor="?attr/colorPrimary"
        app:ms_inactiveStepColor="?attr/colorOutline"
        app:ms_nextButtonColor="?attr/colorPrimary"
        app:ms_stepperType="dots"
        app:ms_tabStepDividerWidth="138dp" />

</androidx.constraintlayout.widget.ConstraintLayout>